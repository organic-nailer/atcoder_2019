    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "hogehoge",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-O0",
                "${file}",
                "-o",
                "${fileDirname}/a.out"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}